# mdaudiobook Environment Configuration
# Copy this file to .env and configure your API keys

# =============================================================================
# TTS API PROVIDERS (Optional - for premium quality)
# =============================================================================

# ElevenLabs (Premium TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Default voice

# Azure Cognitive Services
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Google Cloud Text-to-Speech
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json
GOOGLE_CLOUD_PROJECT=your_project_id

# OpenAI TTS (Recommended for high-quality audiobooks)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# AI ENHANCEMENT PROVIDERS (Optional - for text optimization)
# =============================================================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenRouter (Cost-effective API access)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# LOCAL AI CONFIGURATION
# =============================================================================

# Ollama (Local AI)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2:7b

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Default processing mode: basic, local_ai, api, hybrid
DEFAULT_PROCESSING_MODE=hybrid

# Output directory
OUTPUT_DIR=output

# Temporary files directory
TEMP_DIR=temp

# =============================================================================
# AUDIO CONFIGURATION
# =============================================================================

# Default audio format: m4b, mp3, wav
DEFAULT_AUDIO_FORMAT=m4b

# Audio quality: low, medium, high
DEFAULT_AUDIO_QUALITY=high

# Sample rate (Hz)
DEFAULT_SAMPLE_RATE=44100

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/mdaudiobook.log

# Enable performance monitoring
ENABLE_MONITORING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable verbose output
VERBOSE=false

# Cache directory for processed content
CACHE_DIR=.cache

# Enable caching
ENABLE_CACHE=true
